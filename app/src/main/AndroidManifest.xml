<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    package="com.maiajam.sofa">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        tool:replace="android:supportsRtl"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activites.MainActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activites.AskandSaleFoodActivity"
            android:label="@string/title_activity_ask_food"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activites.RestFoodItemsActivity"
            android:label="@string/title_activity_rest_food_items"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.activites.ViewItemDetials" />
        <activity android:name=".ui.activites.MyCartOrdersActivity" />
        <activity android:name=".ui.activites.LoginActivity" />
        <activity android:name=".ui.activites.CreatNewAccountActivity" />
        <activity android:name=".ui.activites.MyOrdersActivity" />
        <activity android:name=".ui.activites.AboutAppActivity" />
        <activity android:name=".ui.activites.ConnectUsActivity" />
        <activity android:name=".ui.activites.NotificationActivity" />
        <activity android:name=".ui.activites.AddNewProductActivity" />
        <activity android:name=".ui.activites.MyOffersActivity" />
        <activity android:name=".ui.activites.AddNewOfferActivity" />
        <activity android:name=".ui.activites.CommetionActivity" />
        <activity android:name=".ui.activites.RequestedOrderActivity" />
        <activity
            android:name=".ui.activites.NewRestOwnerAccountActivity"
            android:label="@string/title_activity_new_rest_owner_account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.activites.CreatNewRestActivity"
            android:label="@string/title_activity_creat_new_rest"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>