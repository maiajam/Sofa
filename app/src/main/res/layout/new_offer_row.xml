<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="20dp"

    android:layoutDirection="rtl"
    tools:context=".ui.activites.NewOffersActivity">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:id="@+id/NewOffers_Row_cardview"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"

        android:layout_weight="0.50"
        android:orientation="vertical">

        <TextView
            android:id="@+id/OfferTitle_NewOffers_Row_TXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="عنوان التنبيه يظهر هنا"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />


            <TextView
                android:id="@+id/RestNameOffer_NewOffers_Row_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="fgf f "
                android:layout_gravity="end"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/Time_NewOffers_Row_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/TimeDuration"
                android:layout_marginStart="20dp"
                android:layout_gravity="end"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp" />

        <TextView
            android:id="@+id/Cost_NewOffers_Row_TXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/Price"
            android:layout_marginStart="20dp"
            android:layout_gravity="end"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />







    </LinearLayout>


        <ImageView
            android:id="@+id/NewOfferPhoto_NewOffer_Row_img"
            android:layout_width="80dp"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.25"
            android:src="@drawable/star_y" />

    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>