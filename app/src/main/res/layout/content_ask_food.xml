<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activites.AskandSaleFoodActivity">

    <LinearLayout
        android:id="@+id/Search_AskFood_Containar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.SearchView
            android:id="@+id/Search_AskFood_ASKFOOD"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            app:actionViewClass="android.support.v7.widget.SearchView"/>

        <Spinner
            android:id="@+id/City_AskFood_Spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/AskFood_Rec"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Search_AskFood_Containar"/>

</RelativeLayout>